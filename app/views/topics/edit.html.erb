<div class="container">
  <div class="col-md-8 col-md-offset-2 create-form">
    <%= form_for @topic, class: "form" do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="field col-md-offset-2 new-topic">
        <table class="table">
          <tbody id="topics">
            <%= f.fields_for :sub_topics do |builder| %>
              <%= render "sub_topic_fields", f: builder %>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to_add_fields "Add sub-topic", f, :sub_topics %>
      <div class="form-group">
        <%= f.submit "Done", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
